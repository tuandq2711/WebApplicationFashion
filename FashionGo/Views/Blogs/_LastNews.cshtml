@model IEnumerable<FashionGo.Models.Entities.Post>

<nav class="wrap t3-blog ">
    <div class="container">
        <div class="t3-module module " id="Mod103">
            <div class="module-inner">
                <h3 class="module-title"><span>Bài viết mới</span></h3><div class="module-ct">
                    <ul class="nav">
                        <div class="row">
                            @foreach (var m in Model)
                            {
                                <li class="col-md-4 col-lg-4 col-xs-12">
                                    <p class="mod-articles-category-image">
                                        <img src="@m.Image" alt="@m.Title" />
                                    </p>

                                    <p>
                                        <span class="mod-articles-category-date">
                                            <i class="fa fa-calendar">&nbsp;</i>
                                            @if (m.createDate.HasValue)
                                            {
                                                @m.createDate.Value.ToString("dd/MM/yyyy")
                                            }
                                        </span>
                                    </p>

                                    <p class="article-title">
                                        <a class="mod-articles-category-title" href="@Url.RouteUrl("BlogDetails", new { CatSlug = m.Category.Name.ToAscii(), Slug = m.Slug })" title="@m.Title">
                                            @m.Title
                                        </a>
                                    </p>

                                    <p class="mod-articles-category-introtext">
                                        @m.Content.StripTagsRegex().LimitLength(88, "...")
                                    </p>

                                    <p class="mod-articles-category-readmore">
                                        <a class="btn btn-primary mod-articles-category-title" href="@Url.RouteUrl("BlogDetails", new { CatSlug = m.Category.Name.ToAscii(), Slug = m.Slug })" title="@m.Title">
                                            Đọc thêm ...
                                        </a>
                                    </p>
                                </li>
                            }
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>