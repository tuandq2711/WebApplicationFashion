@model FashionGo.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Lấy lại mật khẩu";
    Layout = "~/Views/Shared/_ClearLayout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4 class="page-title">Nhập địa chỉ email:</h4>

    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control unicase-form-control" })
        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger form-helper" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Gửi yêu cầu" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
